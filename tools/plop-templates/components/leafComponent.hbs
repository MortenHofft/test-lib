import { jsx } from '@emotion/core';
import ThemeContext from '../../style/themes/ThemeContext';
import React, { useContext } from 'react';
import PropTypes from 'prop-types';
import { getClasses } from '../../utils/util';
import styles from './styles';

export const {{pascalCase name}} = React.forwardRef(({
  as: Div = 'div',
  className,
  ...props
}, ref) => {
  const theme = useContext(ThemeContext);
  const { classNames } = getClasses(theme.prefix, '{{camelCase name}}', {/*modifiers goes here*/}, className);
  return <Div ref={ref} {...classNames} css={styles.{{camelCase name}}({theme})} {...props} />
});

{{pascalCase name}}.propTypes = {
  as: PropTypes.element
};
